{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "settings.schema.json",
  "title": "Article Writer Settings",
  "description": "Global settings for article writer plugin including companion project defaults and article limits",
  "type": "object",
  "properties": {
    "article_limits": {
      "type": "object",
      "description": "Hard limits for article content. These limits apply to ALL articles regardless of content_type.",
      "properties": {
        "max_words": {
          "type": "integer",
          "minimum": 500,
          "maximum": 50000,
          "description": "Maximum word count for article content (excluding frontmatter and code blocks). Articles exceeding this limit MUST be condensed while maintaining quality, flow, and author voice."
        }
      }
    },
    "companion_project_defaults": {
      "type": "object",
      "description": "Default settings for each companion project type. Article-specific values override these.",
      "properties": {
        "code": {
          "$ref": "#/$defs/companion_project_defaults"
        },
        "node": {
          "$ref": "#/$defs/companion_project_defaults"
        },
        "python": {
          "$ref": "#/$defs/companion_project_defaults"
        },
        "document": {
          "$ref": "#/$defs/companion_project_defaults"
        },
        "diagram": {
          "$ref": "#/$defs/companion_project_defaults"
        },
        "template": {
          "$ref": "#/$defs/companion_project_defaults"
        },
        "dataset": {
          "$ref": "#/$defs/companion_project_defaults"
        },
        "config": {
          "$ref": "#/$defs/companion_project_defaults"
        },
        "script": {
          "$ref": "#/$defs/companion_project_defaults"
        },
        "spreadsheet": {
          "$ref": "#/$defs/companion_project_defaults"
        },
        "other": {
          "$ref": "#/$defs/companion_project_defaults"
        }
      }
    },
    "platform_defaults": {
      "type": "object",
      "description": "Default settings for each social media platform. Controls tone adjustments, length limits, and format constraints.",
      "properties": {
        "linkedin": { "$ref": "#/$defs/platform_config" },
        "instagram": { "$ref": "#/$defs/platform_config" },
        "x": { "$ref": "#/$defs/platform_config" }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "last_updated": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  },
  "$defs": {
    "platform_config": {
      "type": "object",
      "description": "Configuration for a social media platform",
      "properties": {
        "max_words": { "type": "integer", "description": "Default word count target" },
        "hard_max_words": { "type": "integer", "description": "Absolute maximum word count" },
        "min_words": { "type": "integer", "description": "Minimum word count" },
        "hook_lines": { "type": "integer", "description": "Number of hook lines at start" },
        "hashtag_count": {
          "type": "object",
          "properties": {
            "min": { "type": "integer" },
            "max": { "type": "integer" }
          }
        },
        "cta_required": { "type": "boolean", "description": "Whether a call-to-action is required" },
        "caption_max_chars": { "type": "integer", "description": "Maximum caption characters (Instagram)" },
        "caption_visible_chars": { "type": "integer", "description": "Visible characters before truncation (Instagram)" },
        "emojis_encouraged": { "type": "boolean", "description": "Whether emojis are encouraged" },
        "carousel_slides": {
          "type": "object",
          "properties": {
            "min": { "type": "integer" },
            "max": { "type": "integer" },
            "default": { "type": "integer" }
          }
        },
        "tweet_max_chars": { "type": "integer", "description": "Maximum characters per tweet (X)" },
        "thread_tweets": {
          "type": "object",
          "properties": {
            "min": { "type": "integer" },
            "max": { "type": "integer" },
            "default": { "type": "integer" }
          }
        },
        "tone_adjustment": {
          "type": "object",
          "description": "Offsets applied to author's base tone for this platform",
          "properties": {
            "formality_offset": { "type": "integer", "minimum": -5, "maximum": 5 },
            "opinionated_offset": { "type": "integer", "minimum": -5, "maximum": 5 }
          }
        }
      }
    },
    "companion_project_defaults": {
      "type": "object",
      "description": "Default values for a companion project type",
      "properties": {
        "technologies": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Default technologies/tools for this companion project type"
        },
        "has_tests": {
          "type": "boolean",
          "description": "Whether companion projects of this type should include tests by default"
        },
        "path": {
          "type": "string",
          "description": "Default folder path for the companion project"
        },
        "scaffold_command": {
          "type": "string",
          "description": "Command to create the base project (e.g., composer create-project laravel/laravel code)"
        },
        "post_scaffold": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Commands to run after scaffolding (e.g., install test framework)"
        },
        "verification": {
          "type": "object",
          "description": "Commands to verify the companion project is complete and working",
          "properties": {
            "install_command": {
              "type": ["string", "null"],
              "description": "Command to install dependencies (e.g., composer install, npm install)"
            },
            "setup_commands": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Commands to run after install (e.g., php artisan migrate)"
            },
            "run_command": {
              "type": ["string", "null"],
              "description": "Command to start the application (e.g., php artisan serve)"
            },
            "test_command": {
              "type": ["string", "null"],
              "description": "Command to run tests (e.g., php artisan test)"
            },
            "success_indicators": {
              "type": "object",
              "description": "What indicates each verification step succeeded"
            },
            "manual_checks": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Manual verification steps for non-code companion projects"
            }
          }
        },
        "required_structure": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Required files/folders that must exist"
        },
        "env_setup": {
          "type": "object",
          "description": "Environment configuration (e.g., DB_CONNECTION: sqlite)"
        },
        "notes": {
          "type": "string",
          "description": "Additional notes for this companion project type"
        }
      }
    }
  }
}
