{
  "description": "Hooks for Laravel package development toolkit",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/format-php.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
