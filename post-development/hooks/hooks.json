{
  "description": "Post-development plugin hooks for automated workflows",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/on-file-change.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
