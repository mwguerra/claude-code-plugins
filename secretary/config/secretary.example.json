{
  "briefing": {
    "showOnStart": true,
    "includePendingCommitments": true,
    "includeRecentDecisions": true,
    "includeGoalProgress": true,
    "includeGitHub": true,
    "daysBack": 7
  },
  "logging": {
    "captureCommits": true,
    "captureDecisions": true,
    "captureCommitments": true,
    "captureIdeas": true
  },
  "vault": {
    "enabled": true,
    "secretaryFolder": "secretary",
    "syncOnWorkerRun": true
  },
  "github": {
    "username": "",
    "trackIssues": true,
    "trackPRs": true,
    "trackReviews": true,
    "cacheMinutes": 15
  },
  "ai": {
    "enabled": true,
    "model": "haiku",
    "maxBudget": "0.50",
    "timeout": 20
  },
  "worker": {
    "cronEnabled": true,
    "maxItemsPerRun": 50,
    "retryLimit": 3,
    "ttlHours": 24
  },
  "memory": {
    "enabled": true
  },
  "patterns": {
    "enabled": true,
    "minConfidence": 0.6,
    "minEvidence": 3
  }
}
